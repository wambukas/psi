<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Kulinarinių patiekalų ruošimo asistentas{% endblock %}</title>
    {% stylesheets
    'css/bootstrap.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
    {% javascripts
    '@IntecoKuPRaDefaultBundle/Resources/public/js/jquery-1.9.1.min.js'
    %}<script type="text/javascript" src="{{ asset_url }}"></script>{% endjavascripts %}
    <script type="text/javascript" src="{{ asset('bundles/uran1980fancybox/js/fancybox/source/jquery.fancybox.pack.js') }}"></script>
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><strong>"KuPRa"</strong> <span style="font-size: 60%">Kulinarinių patiekalų ruošimo asistentas</span></a>
        </div>
        <div id="navbar" style="float:right" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ url('_logout') }}">Atsijungti</a></li>
                <li><a href="{{ url('_profile') }}">{{ userRepository.getUserName() }}</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>
<div style="left:20px;top:80px;position:relative;width: 150px">
{{ knp_menu_render('main.menu', { 'style': 'stacked-pills' }) }}
</div>
<div style="position:absolute;top:80px;bottom:120px;left:200px;right:120px;">
<div style="border-radius:20px; background-color: #C8FFFF; padding:20px">

{% block content %}{% endblock %}

</div>
</div>
</body>
</html>
